@model IEnumerable<Event_Management.Models.EventModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col d-flex justify-content-center">
    @if (ViewBag.Message != null)
    {
        <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
    }

    <div class="container">
        <div class="py-3">
            <h2 class="m-0 font-weight-bold text-primary">Reminders List:</h2>
        </div>
        <div class="">
            <table aria-describedby="mydesc" class="table table-striped table-dark table-responsive-md table-responsive-sm table-responsive-lg">
                <thead>
                    <tr class="col-md-12">
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.EventName)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Time)
                        </th>
                        <th class="col-md-2"> Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                    <tr class="col-md-12">
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td class="col-md-2">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td class="col-md-2">
                            @if (item.Date != null)
                            {@DateTime.Parse(item.Date).ToShortDateString()}
                        </td>
                        <td class="col-md-2">
                            @if (item.Date != null)
                            {@DateTime.Parse(item.Time).ToShortTimeString()}
                        </td>
                        <td class="col-md-2">
                            <a href="View?id=@item.Id" class="text-warning">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="Edit?id=@item.Id">
                                <i class='fa fa-edit'></i>
                            </a>
                            <a href="Delete?id=@item.Id" class="text-danger">
                                <i class='fa fa-trash'></i>
                            </a>

                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
