@model IEnumerable<Event_Management.Models.EventModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    <div>
        <div class="cover-container pt-5 d-flex w-100 h-100 p-3 mx-auto flex-column">
            <main role="main" id="bearcat_alert">
                <div class="row">
                    <div class="col-md-6 col-xs-6 col-sm-6">
                        <img class="img-home" src="~/FASFA-Homepage-Graphic-22-23-01.jpg" />
                    </div>
                    <div class="col-md-6 col-xs-6 col-sm-6 right-home">
                        <h1 class="h1">P&F Class.</h1>
                        <h3>Location: <span>Colden hall</span></h3>
                        <h5 class="pt-2 pb-2">Date & Time: <span> 1 PM 01/03/2021</span></h5>
                        <div class="pt-3">
                            <button class="btn btn-md btn-dark">See more</button>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>
    if (User.Identity.IsAuthenticated != false)
    {
        if (Model != null)
        {
            <div class="card-deck">
                @foreach (var i in Model)
                {
                    <div class="card col-sm-4 border-dark">
                        @if (i.ImageName != "")
                        {
                            <img src="@("Image/"+i.ImageName)" class="card-img-top" width="250px" height="250px">
                        }
                        else
                        {
                            <img src="Image/default.jpg" class="card-img-top" width="250px" height="250px">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@i.EventName</h5>
                            <p class="card-text">@i.Location</p>
                        </div>
                        <div class="card-footer">
                            <a href="Events/Edit/@i.Id" class="btn btn-primary btn-block">Edit</a>
                        </div>
                    </div>
                }
            </div>

        }

    }


}